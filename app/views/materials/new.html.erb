<%= form_with model: [@course, @material] do |f| %>
<div>
  <%= f.label :title %>
  <%= f.text_field :title %>
</div>

<div>
  <%= f.label :description %>
  <%= f.text_area :description %>
</div>

<div>
  <%= f.label :content %>
  <%= f.cktext_area :content, CKEditor.config %>
</div>

<div>
  <%= f.label :image, "Upload Image" %>
  <%= f.file_field :image %>
</div>

<div>
  <%= f.submit "Save Material" %>
</div>
<% end %>