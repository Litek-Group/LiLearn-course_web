<div class="material-fields">
  <div>
    <%= f.label :title, "Material Title" %>
    <%= f.text_field :title %>
  </div>

  <div>
    <%= f.label :description, "Material Description" %>
    <%= f.text_area :description %>
  </div>

  <div>
    <%= f.label :content, "Material Content" %>
    <%= f.text_area :content, class: 'ckeditor' %>
  </div>

  <!-- Hidden field to mark material for destruction -->
  <%= f.hidden_field :_destroy, class: "destroy-field", value: "0" %>

  <!-- Button to remove material -->
  <button type="button" class="remove-material">Remove this material</button>
</div>