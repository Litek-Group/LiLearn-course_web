<h1><%= @course.title %></h1>

<div>
  <h2>Thumbnail</h2>
  <% if @course.thumbnail.present? %>
  <%= image_tag @course.thumbnail.url, alt: "Course Thumbnail", width: 200, height: 150 %>
  <% else %>
  <p>No thumbnail uploaded</p>
  <% end %>
</div>

<div>
  <h2>Description</h2>
  <p><%= @course.description %></p>
</div>

<hr>

<h2>Materials</h2>

<% if @course.materials.any? %>
<ul>
  <% @course.materials.each do |material| %>
  <li>
    <h3><%= material.title %></h3>
    <p><strong>Description:</strong> <%= material.description %></p>
    <div>
      <h4>Content</h4>
      <%= raw material.content %>
      <!-- CKEditor content -->
    </div>

    <div>
      <h4>Material Image</h4>
      <% if material.image.present? %>
      <%= image_tag material.image.url, alt: "Material Image", width: 200, height: 150 %>
      <% else %>
      <p>No image uploaded for this material</p>
      <% end %>
    </div>
    <hr>
  </li>
  <% end %>
</ul>
<% else %>
<p>No materials added for this course yet.</p>
<% end %>

<div>
  <%= link_to 'Edit Course', edit_course_path(@course), class: 'btn btn-primary' %> |
  <%= link_to 'Back to Courses', courses_path, class: 'btn btn-secondary' %>
</div>