<h1>Login</h1>

<%= form_with(url: login_path, method: :post) do %>
  <div>
    <%= label_tag :username %>
    <%= text_field_tag :username, nil, placeholder: "Masukkan username" %>
  </div>

  <div>
    <%= label_tag :password %>
    <%= password_field_tag :password, nil, placeholder: "Masukkan password" %>
  </div>

  <div>
    <%= submit_tag "Login" %>
  </div>
<% end %>

